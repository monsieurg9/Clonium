<UserControl x:Class="Clonium.UI.Сhip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Clonium.UI"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <Grid>
        <Grid RenderTransformOrigin="0.5,0.5" Width="282.843" Height="282.843" x:Name="ChipBack" MouseDown="ChipBack_MouseDown">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="45"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Ellipse x:Name="Point1" HorizontalAlignment="Left" Height="50" Margin="56,130,0,0" Stroke="Black" VerticalAlignment="Top" Width="50"/>
            <Ellipse x:Name="Point2" HorizontalAlignment="Left" Height="50" Margin="132,54,0,0" Stroke="Black" VerticalAlignment="Top" Width="50"/>
            <Ellipse x:Name="Point3" HorizontalAlignment="Left" Height="50" Margin="156,156,0,0" Stroke="Black" VerticalAlignment="Top" Width="50"/>
        </Grid>
    </Grid>
</UserControl>
