<UserControl x:Name="PlayerControl" x:Class="Clonium.UI.Player"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Clonium.UI"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <Grid x:Name="Back" Width="Auto" Height="Auto" ClipToBounds="True">
        <Grid Width="Auto" Height="Auto">
            <Ellipse x:Name="Head" HorizontalAlignment="Left" Height="120" Margin="39,0,0,0" Stroke="Black" VerticalAlignment="Top" Width="120"/>
            <Ellipse x:Name="Body" HorizontalAlignment="Left" Height="200" Margin="0,67,0,0" Stroke="Black" VerticalAlignment="Top" Width="200"/>
            <Rectangle x:Name="rectIsActive" HorizontalAlignment="Left" Height="38" Stroke="Black" VerticalAlignment="Top" Width="20"/>
        </Grid>
        

    </Grid>
</UserControl>
